<body>
  <img src="logo.png" alt="prof.syn logo" />
  <div id="number">Loading...</div>

  <script>
    const SHEET_ID = "1RKloafEUhUi2t4wPxMJxrLRcxuKFFdoAQz4MYFEqHo4";
    const API_KEY = "AIzaSyDzj_d65l8Ggunk5yE77V8msY9v_V_iEt0";
    const SHEET_NAME = "Sheet2";
    const RANGE = `${SHEET_NAME}!A1`;

    async function fetchNumber() {
      const timestamp = new Date().getTime(); // prevent caching
      const url = `https://sheets.googleapis.com/v4/spreadsheets/${SHEET_ID}/values/${RANGE}?key=${API_KEY}&t=${timestamp}`;

      try {
        const response = await fetch(url);
        const data = await response.json();
        const value = data.values?.[0]?.[0];
        document.getElementById("number").innerText = value ?? "No value";
      } catch (err) {
        document.getElementById("number").innerText = "Error loading number";
        console.error("Fetch error:", err);
      }
    }

    fetchNumber();
    setInterval(fetchNumber, 10000); // Refresh every 10 seconds
  </script>
</body>
